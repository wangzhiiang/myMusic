/**index.wxss**/
view {
  box-sizing: border-box
}

.swiper {
  display: block;
  width: 750rpx;
  height: 300rpx;
}

.swiper-img {
  display: block;
  width: 750rpx;
  height: 300rpx;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.icon-group {
  display: flex;
}

.icon-group .item {
  flex: 1;
  text-align: center;
  font-size: 36rpx;
  color: #666;
}

.icon-img {
  width: 172rpx;
  height: 172rpx;
}

.music-list {
  width: 750rpx;
  margin-top: 50rpx;
  border-top: 1px solid #eee;
}

.music-list .title {
  text-align: left;
  font-size: 36rpx;
  color: #333;
  padding: 20rpx 30rpx;
  border-bottom: 1px solid #eee;
}

.music-list .body {
  padding: 0 30rpx;
}

.music-list .body .item {
  display: flex;
  width: 750rpx;
  margin-top: 20rpx;
  align-items: center
}

.music-list .body .item image {
  width: 150rpx;
  height: 150rpx;
}

.music-list .body .item .content {
  flex: 1;
  padding-left: 30rpx;
  font-size: 32rpx;
  color: #666;
}

.music-list .body .item .content .text {
  margin-top: 16rpx;
  font-size: 28rpx;
  color: #999;
}